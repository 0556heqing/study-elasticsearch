{
  "index":{
    "analysis":{
      "filter":{
        "pinyin_filter":{
          "lowercase":"true",
          "keep_original":"true",
          "remove_duplicated_term":"true",
          "keep_separate_first_letter":"true",
          "type":"pinyin",
          "limit_first_letter_length":"16",
          "keep_full_pinyin":"true"
        }
      },
      "analyzer":{
        "ik_max_word_pinyin":{
          "filter":"pinyin_filter",
          "type":"custom",
          "tokenizer":"ik_max_word"
        },
        "ik_smart_pinyin":{
          "filter":"pinyin_filter",
          "type":"custom",
          "tokenizer":"ik_smart"
        },
        "nonword": {
          "pattern": "(\\|\\|\\|)",
          "filter": "lowercase",
          "type": "pattern"
        }
      }
    }
  }
}
